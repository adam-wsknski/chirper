<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h2>Microposts feed</h2>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">

  <% provide(:title, "Home") %>

  <h1>Welcome to Chirper</h1>
  <h2>This is a homepage of Chirper</h2>

  <%= link_to "Sign up", 'new', class: "btn btn-lg btn-primary" %>
  <p>Find me in app/views/static_pages/help.html.erb</p>
  <p>
    First one not-out-of-the-box
  </p>
</div>

<%= link_to image_tag("rails-logo.svg", alt: "Rails logo"), 'http://rubyonrails.org' %>
<% end %>
